@model PopStream.Models.Contato

@{
    ViewData["Title"] = "Excluir Mensagem";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning">
    Tem certeza que deseja excluir esta mensagem? A ação não pode ser desfeita.
</div>

<dl class="row">
    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Model.NomeCompleto</dd>

    <dt class="col-sm-2">E‑mail</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Assunto</dt>
    <dd class="col-sm-10">@Model.Assunto</dd>

    <dt class="col-sm-2">Mensagem</dt>
    <dd class="col-sm-10">@Model.Mensagem</dd>

    <dt class="col-sm-2">Enviada</dt>
    <dd class="col-sm-10">@Model.DataEnvio.ToLocalTime().ToString("f")</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
