@model PopStream.Models.Artista

@{
    ViewData["Title"] = "Criar artista";
}

<h1>@ViewData["Title"]</h1>

<h4>Artista</h4>
<hr />
<div class="row">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataNascimento" class="form-label"></label>
                <input asp-for="DataNascimento" type="date" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PaisNascimento" class="form-label"></label>
                <input asp-for="PaisNascimento" class="form-control" />
                <span asp-validation-for="PaisNascimento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Foto do artista (opcional)</label>
                <input type="file" name="FotoUpload" class="form-control" />
            </div>

            <div class="d-flex gap-2">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
