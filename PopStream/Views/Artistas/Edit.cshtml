@model PopStream.Models.Artista

@{
    ViewData["Title"] = "Editar artista";
}

<h1>@ViewData["Title"]</h1>

<h4>Artista</h4>
<hr />
<div class="row">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FotoCaminho" />

            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataNascimento" class="form-label"></label>
                <input asp-for="DataNascimento" type="date" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PaisNascimento" class="form-label"></label>
                <input asp-for="PaisNascimento" class="form-control" />
                <span asp-validation-for="PaisNascimento" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Foto atual</label>
                <div class="mb-2">
                    @if (!string.IsNullOrEmpty(Model.FotoCaminho))
                    {
                        <img id="current-foto" src="@Model.FotoCaminho" alt="Foto atual" style="max-width:220px; border-radius:6px; object-fit:cover;" />
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center text-white" style="height:140px; max-width:220px;">
                            <span>Sem foto</span>
                        </div>
                    }
                </div>

                <label class="form-label">Substituir foto (opcional)</label>
                <input type="file" name="FotoUpload" id="FotoUpload" class="form-control" />
                <div class="mt-2">
                    <img id="preview-foto" src="#" alt="Pré-visualização da nova foto" style="display:none; max-width:220px; border-radius:6px; box-shadow:0 1px 6px rgba(0,0,0,.12);" />
                </div>
            </div>

            <div class="d-flex gap-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        (function () {
            const input = document.getElementById('FotoUpload');
            const preview = document.getElementById('preview-foto');

            if (!input) return;

            input.addEventListener('change', function () {
                const file = input.files && input.files[0];
                if (!file) {
                    preview.style.display = 'none';
                    preview.src = '#';
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (ev) {
                    preview.src = ev.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            });
        })();
    </script>
}
