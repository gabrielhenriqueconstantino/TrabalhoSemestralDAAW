@model IEnumerable<PopStream.Models.Genero>

@{
    ViewData["Title"] = "Gêneros";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>@ViewData["Title"]</h1>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-success">Novo gênero</a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Nenhum gênero cadastrado.</div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach (var genero in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0" style="color: black">@genero.Nome</h5>
                        </div>
                        <div class="ms-3">
                            <a asp-action="Details" asp-route-id="@genero.Id" class="btn btn-sm btn-primary">Detalhes</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@genero.Id" class="btn btn-sm btn-outline-secondary ms-1">Editar</a>
                                <a asp-action="Delete" asp-route-id="@genero.Id" class="btn btn-sm btn-outline-danger ms-1">Excluir</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
