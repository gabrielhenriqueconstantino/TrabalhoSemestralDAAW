@model dynamic
@{
    ViewData["Title"] = "Painel Administrativo";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="mb-4">Painel Administrativo</h2>

    <div class="row g-4">

        <div class="col-md-3">
            <div class="card shadow text-center p-3">
                <h4>Produções</h4>
                <h1>@Model.TotalProducoes</h1>
                <a class="btn btn-primary" asp-controller="Admin" asp-action="Producoes">Gerenciar</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow text-center p-3">
                <h4>Artistas</h4>
                <h1>@Model.TotalArtistas</h1>
                <a class="btn btn-primary" asp-controller="Admin" asp-action="Artistas">Gerenciar</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow text-center p-3">
                <h4>Gêneros</h4>
                <h1>@Model.TotalGeneros</h1>
                <a class="btn btn-primary" asp-controller="Generos" asp-action="Index">Gerenciar</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow text-center p-3">
                <h4>Mensagens</h4>
                <h1>@Model.TotalMensagens</h1>
                <a class="btn btn-primary" asp-controller="Contatos" asp-action="Index">Visualizar</a>
            </div>
        </div>

    </div>

    <hr class="my-5" />

    <form asp-controller="Account" asp-action="Logout" method="post">
        @Html.AntiForgeryToken()
        <button class="btn btn-danger">Sair</button>
    </form>
</div>

